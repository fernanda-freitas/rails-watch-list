<div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light banner">
    <div class="col-md-5 p-lg-5 mx-auto banner-content">
      <h1 class="display-6 fw-bold">Your place to organize what you wanna see most.</h1>
      <%= link_to 'Create list', new_list_path, class:'btn btn-primary' %>
    </div>
</div>

<%# Listt cards %>
<div class="container">
  <div class="row g-4">
    <% @lists.each do |list| %>
        <%= link_to list, class:"list-card col-md-3" do %>
            <h4 class="card-list-name"><%= list.name %></h4>
        <% end %>
    <% end %>
  </div>
</div>

<div class="position-relative overflow-hidden p-3 p-md-5 text-center banner banner-sm show-page">
</div>
<div class="movies-show container col-md-5">
  <h1 class="display-8 fw-bold"><%= @list.name %></h1>
  <div class="action-row">
    <%= link_to 'Delete list', list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class:'btn btn-primary' %>
  </div>

  <div class="movies-display">
    <div class="row gap-4">
      <% @list.movies.each do |movie|%>
          <%= image_tag movie.poster_url, class:'movie-poster col-6 col-sm-4 col-md-2' %>
      <% end %>
    </div>
  </div>
</div>
